{% extends 'base.html.twig' %}

{% block title %}Hello ProjectController!{% endblock %}

{% block body %}
    <!-- CONTENT -->
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-12 col-md-4 position-md-sticky d-flex align-items-center vh-md-100" style="top: 0;">

                <!-- Sidebar -->
                <aside class="py-8 py-md-10">
                    <!-- Brand -->
                    <div class="img-fluid mb-4 text-body svg-shim" style="max-width: 140px;">
                        {{ project.title }}
                    </div>
                    <!-- Text -->
                    <p class="fs-lg mb-7 text-muted">
                        {{ project.description |  striptags }}
                    </p>

                    <!-- List group -->
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">

                            <!-- Heading -->
                            <h6 class="d-flex mb-0 text-uppercase">
                                Year <span class="ms-auto">2019</span>
                            </h6>

                        </li>
                        <li class="list-group-item">

                            <!-- Heading -->
                            <h6 class="d-flex mb-0 text-uppercase">
                                Service <span class="ms-auto">Photography</span>
                            </h6>

                        </li>
                        <li class="list-group-item">

                            <!-- Heading -->
                            <h6 class="d-flex mb-0 text-uppercase">
                                Timeline <span class="ms-auto">60 Days</span>
                            </h6>

                        </li>
                    </ul>

                </aside>

            </div>
            <div class="col-10 col-md-7">

                <!-- Images -->
                <section class="pb-8 pt-md-12 pb-md-10">
                    <a class="d-block" data-bigpicture='{"imgSrc": "{{ asset('uploads/images/projects/' ~ project.image) }}"}' href="#">
                        <img class="img-fluid rounded" src="{{ vich_uploader_asset(project, 'imageFile') | imagine_filter('project_page') }}" alt="...">
                    </a>
                </section>
            </div>
        </div>
        <!-- URL -->
        <p class="fs-lg mb-7 text-muted">
            <a href="{{ project.url }}">{{ project.url }}
        </p>

    </div>


    <!-- SHAPE -->
    <div class="position-relative">
        <div class="shape shape-bottom shape-fluid-x svg-shim text-light">
            <svg viewBox="0 0 2880 48" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M0 48h2880V0h-720C1442.5 52 720 0 720 0H0v48z" fill="currentColor"/></svg>      </div>
    </div>



{% endblock %}
