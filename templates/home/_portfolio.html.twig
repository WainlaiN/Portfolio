	<!-- ARTICLES -->
	<!-- Card -->
	<section class="">
		<div class="container">
			<div class="row">
				{% for project in projects %}
					<div class="card card-row shadow-light-lg lift lift-lg mb-5" data-aos="fade-right">
						<div class="row gx-0">
							<div class="col-12">

							</div>
							<a class="col-12 col-md-6 order-md-2 bg-cover card-img-end" style="background-image: url({{ vich_uploader_asset(project, 'imageFile') | imagine_filter('project_page') }});" href="{{ path('project_show', { 'slug': project.slug }) }}">

								<!-- Image (placeholder) -->
								<img src="assets/img/photos/photo-27.jpg" alt="..." class="img-fluid d-md-none invisible">

								<!-- Shape -->
								<div class="shape shape-start shape-fluid-y svg-shim text-white d-none d-md-block">
									<svg viewBox="0 0 112 690" fill="none" xmlns="http://www.w3.org/2000/svg">
										<path d="M0 0h62.759v172C38.62 384 112 517 112 517v173H0V0z" fill="currentColor"/>
									</svg>
								</div>

							</a>
							<div class="col-12 col-md-6 order-md-1">

								<!-- Body -->
								<a class="card-body" href="#!">

									<!-- Heading -->
									<h3>
										{{ project.title }}
									</h3>

									<!-- Text -->
									<p class="mb-0 text-muted">
										{{ project.description }}</p>

								</a>

								<!-- Meta -->
								<a class="card-meta" href="#!">

									<!-- Divider -->
									<hr class="card-meta-divider">

									<!-- Avatar -->
									<div class="avatar avatar-sm me-2">
										<img src="{{ asset('build/images/photos/moi.png') }}" alt="..." class="avatar-img rounded-circle">
									</div>

									<!-- Author -->
									<h6 class="text-uppercase text-muted me-2 mb-0">
										{{ project.user.prenom }}
									</h6>

									<!-- Date -->
									<p class="h6 text-uppercase text-muted mb-0 ms-auto">
										<time datetime="2019-05-02">{{ project.updatedAt | date('d/m/Y') }}</time>
									</p>

								</a>

							</div>

						</div> <!-- / .row -->
					</div>
				{% endfor %}

			</div>


		</div>
	</section>
</div>